<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/margins"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/font_header"
            android:gravity="center"
            android:text="MASTERMIND" />

        <Button
            android:id="@+id/quit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="30dp"
            android:text="Quit" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="15dp"
            android:contentDescription="gameBoard"
            app:srcCompat="@drawable/background_main" />

        <Button
            android:id="@+id/red_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/red_circle"
            android:text="" />

        <Button
            android:id="@+id/orange_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/red_circle"
            android:layout_marginStart="320dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/orange_circle"
            android:text="" />

        <Button
            android:id="@+id/yellow_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/orange_circle"
            android:layout_marginStart="320dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/yellow_circle"
            android:text="" />


        <Button
            android:id="@+id/green_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/yellow_circle"
            android:layout_marginStart="320dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_circle"
            android:text="" />

        <Button
            android:id="@+id/blue_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/green_circle"
            android:layout_marginStart="320dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_circle"
            android:text="" />

        <Button
            android:id="@+id/purple_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/blue_circle"
            android:layout_marginStart="320dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/purple_circle"
            android:text="" />

        <Button
            android:id="@+id/guess1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@id/imageView"
            android:layout_alignBottom="@id/imageView"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/red_circle" />

        <Button
            android:id="@+id/guess2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@id/guess1"
            android:layout_alignBottom="@id/imageView"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/red_circle" />

        <Button
            android:id="@+id/guess3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@id/guess2"
            android:layout_alignBottom="@id/imageView"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/red_circle" />

        <Button
            android:id="@+id/guess4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@id/guess3"
            android:layout_alignBottom="@id/imageView"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/red_circle" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
